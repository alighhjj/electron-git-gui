{
  "name": "electron-git-gui",
  "version": "1.0.0",
  "description": "基于Electron的Git图形界面工具",
  "main": "main/main.js",
  "scripts": {
    "start": "chcp 65001 > nul && electron .",
    "dev": "chcp 65001 > nul && electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "build-renderer": "webpack --config webpack.renderer.config.js",
    "dev-renderer": "webpack --config webpack.renderer.config.js --watch"
  },
  "keywords": [
    "git",
    "gui",
    "electron",
    "version-control"
  ],
  "author": "Electron Git GUI Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0",
    "html-webpack-plugin": "^5.6.4",
    "style-loader": "^4.0.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-git": "^3.15.1"
  },
  "build": {
    "appId": "com.electron.gitgui",
    "productName": "Electron Git GUI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "renderer/**/*",
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Electron Git GUI Team",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "differentialPackage": false,
      "warningsAsErrors": false
    },
    "portable": {
      "unpackDirName": "ElectronGitGUI"
    }
  }
}
